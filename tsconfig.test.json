{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest/globals", "jest", "node", "@testing-library/jest-dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx"
  ]
}
